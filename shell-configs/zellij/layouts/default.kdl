layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="https://github.com/dj95/zjstatus/releases/latest/download/zjstatus.wasm" {
                format_left  "{mode} #[fg=#89b4fa,bold]{session} {tabs}"
                format_center ""
                format_right "{command_git_branch} {pipe_status} {datetime}"
                format_space ""

                border_enabled  "false"
                hide_frame_for_single_pane "true"

                // Catppuccin Mocha mode indicators
                mode_normal  "#[bg=#89b4fa,fg=#1e1e2e,bold]  NORMAL "
                mode_tmux    "#[bg=#fab387,fg=#1e1e2e,bold]  PREFIX "
                mode_pane    "#[bg=#a6e3a1,fg=#1e1e2e,bold]  PANE "
                mode_tab     "#[bg=#cba6f7,fg=#1e1e2e,bold]  TAB "
                mode_resize  "#[bg=#f9e2af,fg=#1e1e2e,bold]  RESIZE "
                mode_move    "#[bg=#94e2d5,fg=#1e1e2e,bold]  MOVE "
                mode_scroll  "#[bg=#f38ba8,fg=#1e1e2e,bold]  SCROLL "
                mode_search  "#[bg=#f5c2e7,fg=#1e1e2e,bold]  SEARCH "
                mode_session "#[bg=#74c7ec,fg=#1e1e2e,bold]  SESSION "
                mode_locked  "#[bg=#6c7086,fg=#1e1e2e,bold]  LOCKED "

                // Tab styling
                tab_normal              "#[fg=#6c7086] {name} "
                tab_active              "#[fg=#89b4fa,bold,italic] {name} "
                tab_separator           "#[fg=#45475a]â”‚"

                // Git branch
                command_git_branch_command  "git rev-parse --abbrev-ref HEAD"
                command_git_branch_format   "#[fg=#a6e3a1]  {stdout} "
                command_git_branch_interval "10"
                command_git_branch_rendermode "static"

                // Pipe status (dynamic updates from hooks)
                pipe_status_format "#[fg=#6c7086]{output}"
                pipe_status_rendermode "dynamic"

                // Clock
                datetime         "#[fg=#6c7086] {format} "
                datetime_format  "%H:%M"
                datetime_timezone "America/New_York"
            }
        }
    }
}
